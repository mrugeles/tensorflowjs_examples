extends layout

block content
  script(src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs")
  script(src="https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity")
  script(src='/js/toxicity.js')

  div.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
    h1(class="h2") Toxicity

  div(class="container")
    div(class="row")
      div(class="col-6")
        div(class="mb-3")
          label(for="text" class="form-label") Text
          textarea(class="form-control" id="text" rows="10")
        div(class="mb-3")
        button(type = "button",  class="btn btn-primary" onclick="classifyText()") Classify text
      div(class="col-6")
        div(class="mb-3")
          label(for="text" class="form-label") Results
          div(class="form-check")
            input(class="form-check-input" type="checkbox" value="" id="toxicity")
            label(class="form-check-label" for="toxicity") Toxicity
          div(class="form-check")
            input(class="form-check-input" type="checkbox" value="" id="identity_attack")
            label(class="form-check-label" for="identity_attack") Identity attack
          div(class="form-check")
            input(class="form-check-input" type="checkbox" value="" id="insult")
            label(class="form-check-label" for="insult") Insult
          div(class="form-check")
            input(class="form-check-input" type="checkbox" value="" id="obscene")
            label(class="form-check-label" for="obscene") Obscene
          div(class="form-check")
            input(class="form-check-input" type="checkbox" value="" id="severe_toxicity")
            label(class="form-check-label" for="severe_toxicity") Severe toxicity
          div(class="form-check")            
            input(class="form-check-input" type="checkbox" value="" id="sexual_explicit")
            label(class="form-check-label" for="sexual_explicit") Sexual explicit
          div(class="form-check")  
            input(class="form-check-input" type="checkbox" value="" id="threat")
            label(class="form-check-label" for="threat") Threat
        div(class="mb-3")
        button(type = "button",  class="btn btn-primary" onclick="clearCheckboxes()") Clear
